<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_liquid_cheese">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:orientation="vertical"
        android:padding="32dp"
        android:paddingEnd="32dp"
        android:gravity="center_vertical"
        tools:ignore="RtlSymmetry">

        <TextView
            style="@style/TextAppearance.AppCompat.Title"
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign Up"
            android:textColor="#0D1868"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="303dp"
            tools:ignore="HardcodedText" />

        <TextView
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="#0D1868"
            android:textSize="15sp"
            android:text="Please signup to continue"
            tools:layout_editor_absoluteX="173dp"
            tools:layout_editor_absoluteY="342dp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/etEmailAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:hint="Email"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            android:textSize="16sp"
            tools:ignore="HardcodedText,TextFields"
            android:autofillHints="" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:ems="10"
            android:hint="Password"
            android:inputType="textPersonName"
            android:minHeight="48dp"
            android:text=""
            android:textSize="16sp"
            tools:ignore="HardcodedText,TextFields" />


        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:background="@drawable/curves"
            android:textColor="@color/white"
            android:text="Sign up "
            tools:ignore="HardcodedText" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:textAlignment="center"
            android:textColor="#700303"
            android:text="Already have an account?"
            tools:ignore="HardcodedText" />

        <Button
            android:layout_gravity="center"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:text="login"
            android:id="@+id/AloginBtn"
            android:textColor="#700303"
            android:background="@drawable/tp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>